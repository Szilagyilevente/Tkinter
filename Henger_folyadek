from tkinter import *
foablack=Tk()
def terfogat():
    r = int(masodik.get())
    m = int(harmadik.get())
    c = 3.14*r*r*m
    negyedik.delete(0, END)
    negyedik.insert(0, str(c)+'cm')
def liter():
    a=int(elsomezo.get())
    b=(Hordo)
    c=b-a
    otodik.delete(0, END)
    otodik.insert(0, 'Ennyi fér még bele: '+str(c))
liter=Label(foablack, text='Mennyi liter a Bor?')
liter.grid()
elso=Entry(foablack)
elso.grid()
sugar=Label(foablack, text='Mekkora a Sugár?')
sugar.grid()
masodik=Entry(foablack)
masodik.grid()
magassag=Label(foablack, text='Mekkora a Magasság?')
magassag.grid()
harmadik=Entry(foablack)
harmadik.grid()
gomb=Button(foablack, text='Kiszámít', command=terfogat)
gomb.grid()
eredmeny=Label(foablack, text='Térfogat:')
eredmeny.grid()
negyedik=Entry(foablack)
negyedik.grid()
gomb2=Button(foablack, text='Liter', command=liter)
gomb2.grid()
Hordo=50
otodik=Entry(foablack)
otodik.grid()
gomb3=Button(foablack, text='Kivonás', command=liter)
gomb3.grid(
foablack.mainloop()
