from tkinter import *
foablack=Tk()
def osszeg():
    r = int(elso.get())
    m = int(masodik.get())
    c = 3.14*r*r*m
    negyedik.delete(0, END)
    negyedik.insert(0, ' '+str(c))
liter=Label(foablack, text='Mennyi liter a Bor?')
liter.grid()
elso=Entry(foablack)
elso.grid()
sugar=Label(foablack, text='Mekkora a Sugár?')
sugar.grid()
masodik=Entry(foablack)
masodik.grid()
magassag=Label(foablack, text='Mekkora a Magasság?')
magassag.grid()
harmadik=Entry(foablack)
harmadik.grid()
gomb=Button(foablack, text='Kiszámít', command=osszeg)
gomb.grid()
eredmeny=Label(foablack, text='Térfogat:')
eredmeny.grid()
negyedik=Entry(foablack)
negyedik.grid()
foablack.mainloop()
